@model IEnumerable<Tarea_CRUDTbUsuarios.Models.V_USARIOS_INDEX>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <br />
                <div class="ibox-content">
                    <table class="table table-responsive" id="DataTable">
                        <thead>
                            <tr role="row">
                                <th>@Html.DisplayNameFor(model => model.usu_Nambe)</th>
                                <th>@Html.DisplayNameFor(model => model.usu_Apellido)</th>
                                <th>@Html.DisplayNameFor(model => model.usu_UsuarioAlias)</th>
                                <th>@Html.DisplayNameFor(model => model.usu_EsAdmin)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row" data-id="@item.usu_Id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Nambe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_UsuarioAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_EsAdmin)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.usu_Id }, new { @class = "btn btn-primary" }) |
                                        @Html.ActionLink("Detalles", "Details", new { id = item.usu_Id }, new { @class = "btn btn-secondary" }) |
                                        <!-- Button trigger modal -->
                                        <button class="btn btn-warning"  data-id="@item.usu_Id">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js" integrity="sha512-QrCtAzOlkM1z0gmMxLQy2FmX9YYtIZssmklPf/UrD88sBf/tx40Q2esxD1HJv1yNfL9tnTbSTpSOdOZv7VW+6w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este elemento?
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelar" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a href="#" id="btn-confirm-delete" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function DeleteModal() {
        $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false })
    }
</script>


<script>
    $(function () {
        $('#btnCancelar').click(function () {
            $('#confirm-delete-modal').modal('hide');
        });
    });
</script>


<script>
    $(function () {
        $('.btn-warning').click(function () {
            var id = $(this).data('id');
            $('#btn-confirm-delete').attr('href', '/Usuarios/Delete/' + id);
            $('#confirm-delete-modal').modal('show');
        });
    });
</script>